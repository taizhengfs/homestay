.home__activity__block {
  width: 100%;
  height: 360rpx;
  position: relative;
  margin-bottom: 32rpx;

}
.home__activity__main {
  width: 100%;
  height: 282rpx;
  position: relative;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  justify-content: space-between;
}
.home__activity__main__cover {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%)
}
.home__activity__main__top {
  display: flex;
  justify-content: space-between;
  position: relative;
  padding-top: 22rpx;
  z-index: 25
}
.home__activity__main__bottom {
  z-index: 25;
  display: flex;
  flex-direction: row;
}
.text__type_red {
  font-size: 48rpx;
  padding-left: 28rpx;
  line-height: 66rpx;
  color: #C12121;
}
.text__type_dark {
  font-size: 48rpx;
  padding-left: 28rpx;
  line-height: 66rpx;
  color: #333;
}
.text__type_white {
  font-size: 48rpx;
  padding-left: 28rpx;
  line-height: 66rpx;
  color: #fff;
  text-shadow: 0 2rpx 5rpx rgba(0,0,0,0.15)
}
.text__type_grey {
  text-decoration: line-through;
  color: #fff;
  font-size: 28rpx;
  line-height: 66rpx;
  margin-left: 20rpx
}
.home__type__tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 172rpx;
  margin-left: 14rpx;
  border-radius: 8rpx;
  background: #fff;
}
.home__type__tips__top {
  display: flex;
  width: 172rpx;
  height: 56rpx;
  flex-direction: row;
  align-items: center;
}
.home__type__tips__bottom {
  font-size: 16rpx;
  line-height: 28rpx;
  color: #999797;
  width: 100%;
  text-align: center;
  background: #F4F4F3;
}
.home__type__tips__top__icon {
  width: 34rpx;
  height: 34rpx;
  padding: 12rpx 8rpx 10rpx 16rpx;
}
.home__type__tips__top__text {
  color: #333;
  font-size: 24rpx;
  line-height: 34rpx;
}
.home__type__duration {
  color: #fff;
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 4rpx 24rpx 4rpx 26rpx;
  background: #BAA68B;
  border-top-left-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}
.home__type__duration.is__grey {
  background: #7F7F7F
}
.home__activity__sub {
  width: 100%;
  height: 78rpx;
  display: flex;
  flex-direction: row;
}
.home__activity__sub__left {
  box-sizing: border-box;
  font-size: 28rpx;
  padding-left: 28rpx;
  line-height: 78rpx;
  background: #F4F4F4;
  color: #666;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  display: flex;
  flex: 1;
}
.home__activity__sub__right {
  background: #C12121;
  border: transparent;
  outline: none;
  color: #fff;
  font-size: 28rpx;
  width: 160rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  border-radius: 0;
  border-bottom-right-radius: 8rpx;
}
.is__color__grey {
  background: #7F7F7F
}
.is__color__gold {
  background: #BAA68B
}
.fake-btn {
  border:none;
  text-align:left;
  padding:0;
  margin:0;
  border-radius: 0;
  line-height:1.5;
  background: transparent;
}
button:after {
  content: '';
  border: none!important;
}
.act__mask {
  width:100%;
  position: absolute;
  left: 0;
  bottom: 0;
  height:118rpx;
  background:linear-gradient(180deg,rgba(0,0,0,0),rgba(0,0,0,0.5));
}
.white__mask {
  width:100%;
  position: absolute;
  opacity: 0.7;
  left: 0;
  bottom: 0;
  height:118rpx;
  background:linear-gradient(180deg,rgba(255,255,255,0),rgba(255,255,255,1));
}