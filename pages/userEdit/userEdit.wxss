/* pages/userEdit/userEdit.wxss */
.user__edit {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 25rpx;
  box-sizing: border-box;
}
.user__edit__profile {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user__profile {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 200rpx;
}
.user__profile image {
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  position: absolute;
  border-radius: 200rpx;
}
.user__profile__tip {
  font-size:28rpx;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  margin-top: 32rpx;
}
.user__edit__main {
  margin-top: 36rpx;
}
.user__edit__block {
  display: flex;
  flex-direction: row;
  border-top:2rpx solid rgba(234,234,234,1);
}
.user__edit__block__left {
  font-size:28rpx;
  color:rgba(51,51,51,1);
  line-height: 96rpx;
  width: 114rpx;
  text-align: right;
}
.user__edit__block__right {
  width: 100%;
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size:28rpx;
}
input.user__edit__input {
  padding-left: 15rpx;
}
.user__edit__input {
  line-height: 96rpx;
  height: 96rpx;
  font-size:28rpx;
  margin-left: 10rpx;
  color:rgba(186,166,139,1);
}
.input__style {
  font-size:28rpx;
  color:rgba(186,166,139,1);
  line-height:40rpx;
  margin-left: 10rpx;
}
.user__picker {
  font-size:28rpx;
  margin-left: 10rpx;
  padding-left: 15rpx;
  line-height:96rpx;
  color:rgba(186,166,139,1);
}
.user__edit__main {
  border-bottom:2rpx solid rgba(234,234,234,1);
}
.user__submit__form {
  width: 100%;
  height: 80rpx;
  margin-top: 66rpx;
}
.user__submit__form button {
  width: 480rpx;
  height: 80rpx;
  background: #BAA68B;
  border-radius: 8rpx;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:80rpx;
}