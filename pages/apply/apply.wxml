<!--pages/apply/apply.wxml-->
<view class='container {{isShowCard?"blur__mask":""}}'>
  <view class='top__header'>
    <image src='http://{{detail.image}}'></image>
  </view>
  <view class='form__cnt'>
    <view class='form__single'>
      <view class='form__single__left'>
        <view class='icon__user'></view>
        姓名
      </view>
      <view class='form__single__right'>
        <input value="{{truename}}" bindinput='editTruename'  placeholder="请填写您的姓名"></input>
      </view>
    </view>
    <view class='form__single'>
      <view class='form__single__left'>
        <view class='icon__connect'></view>
        联系方式
      </view>
      <view class='form__single__right'>
        <input value="{{phone}}" bindinput='editPhone'  placeholder="请填写您的联系方式"></input>
      </view>
    </view>
    <view class='form__single' style='border:none'>
      <view class='form__single__left'>
        <view class='icon__inflution'></view>
        影响力介绍
      </view>
      <view class='form__single__right'>
      </view>
    </view>
    <view class='inflution__cnt'>
      <view class="form__info__block" wx:for="{{formPayload}}">
        <view class='form__single'>
          <view class='form__single__left'>
            平台名
          </view>
          <view class='form__single__right'>
            <picker bindchange="bindPlatformChange" data-index="{{index}}" range-key="{{'name'}}" data-id="{{formPayload[index].platform[formPayload[index].pindex].id}}" value="{{formPayload[index].pindex}}" range="{{formPayload[index].platform}}">
              <view class="form__single__picker">
                {{formPayload[index].platform[formPayload[index].pindex].name||'请选择您的活跃平台'}}
                <view class="icon__arrow__down"></view>
              </view>
            </picker>
          </view>
        </view>
        <view class='form__single'>
          <view class='form__single__left'>
            平台昵称
          </view>
          <view class='form__single__right'>
            <input value="{{formPayload[index].nickname}}" data-index="{{index}}" bindinput='editNickname' placeholder="请填写平台昵称"></input>
          </view>
        </view>
        <view class='form__single'>
          <view class='form__single__left'>
            平台粉丝数量
          </view>
          <view class='form__single__right'>
            <input value="{{formPayload[index].fans_count}}" data-index="{{index}}" bindinput='editFansCount' placeholder="请填写您的粉丝数量"></input>
          </view>
        </view>
        <view class='form__single'>
          <view class='form__single__left'>
            平台认证类型
          </view>
          <view class='form__single__right'>
            <picker bindchange="bindRecoChange" data-index="{{index}}" data-id="{{reco[formPayload[index].rindex].id}}" range-key="name" value="{{formPayload[index].rindex}}" range="{{reco}}">
              <view class="form__single__picker">
                {{reco[formPayload[index].rindex].name||'请选择平台认证类型'}}
                <view class="icon__arrow__down"></view>
              </view>
            </picker>
          </view>
        </view>
        <view class='form__single'>
          <view class='form__single__left'>
            上传截图
          </view>
          <view class='form__single__right' wx:if="{{formPayload[index].image === ''}}" data-index="{{index}}" bindtap='selectPic'>
            <view class='form__add__image'>
              <view class="icon__plus__add"></view>平台主页截图</view>
          </view>
        </view>
        <view wx:if="{{formPayload[index].image!==''}}" class='form__single last'>
            <image src="http:{{formPayload[index].image}}"></image>
        </view>
      </view>
      <view class="form__single pla">
        <view class="form__add__platform" bindtap="addMoreInfo">
          <view class="icon__plus__add__gold"></view>添加其他平台
        </view>
      </view>
    </view>
  </view>
  <view class="form__submit" bindtap='postExperienceApply'>
    提交申请
  </view>
</view>
<view class='pane__success' wx:if="{{isShowCard}}">
  <view class='pane__icon__success'>
    <image src='http://file.yinxinlife.com/images/icon_success.svg'></image>
  </view>
  <view class='pane__title'>申请提交成功</view>
  <text class='pane__desc'>申请结果将在7日内,\n以推送通知的方式告知您。</text>
  <view class='pane__button' bindtap='goBackPage'>确定</view>
</view>
<view class='pane__mask' wx:if="{{isShowCard}}">
</view>