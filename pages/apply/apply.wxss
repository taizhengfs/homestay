/* pages/apply/apply.wxss */
.top__header {
  width: 100%;
  height: 200rpx;
  position: relative;
}
.top__header image {
  width: 100%;
  height: 200rpx;
}
.form__cnt {
  width: 100%;
  padding: 0 22rpx;
  box-sizing: border-box;
}
.form__single__left {
  color: #333;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 40rpx;
  min-width: 200rpx;
  padding-left: 35rpx;
}
.form__single {
  display: flex;
  flex-direction: row;
  height: 108rpx;
  border-bottom: 1px solid rgba(234,234,234,1);
}
.inflution__cnt .form__single.last {
  width: 100%;
  height: 144rpx!important;
  overflow: hidden;
  padding: 12rpx 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.form__single.last image{
  width: 100%;
  height: 120rpx;
}
.inflution__cnt .form__single {
  height: 72rpx;
}
.inflution__cnt .form__single__left {
  padding-left: 20rpx;
}
.inflution__cnt .form__single__right input {
  height: 72rpx;
  padding-right: 44rpx;
}
.form__single__right {
  display: flex;
  flex: 1;
  position: relative;
  align-items: center;
  justify-content: flex-end;
}
.form__single__right input {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #333;
  height: 108rpx;
  text-align: right;
  width: 100%;
}
.inflution__cnt {
  margin-left: 90rpx;
  padding-left: 6rpx;
  margin-top: 18rpx;
  padding-right: 35rpx;
  border-left: 1rpx solid rgba(234,234,234,1)
}
.form__single__picker {
  font-size: 24rpx;
  line-height: 72rpx;
  text-align: right;
  color: #333;
  display: flex;
  flex: 1;
  justify-content: flex-end;
  width: 100%;
  align-items: center;
}
.form__single__right picker {
  width: 100%;
}
.form__add__image {
  color:#fff;
  background: #BAA68B;
  border-radius: 6rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
}
.form__add__platform {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 536rpx;
  height: 64rpx;
  margin: 44rpx 0 10rpx 30rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #BAA68B;
  border-radius:8rpx;
  border:2rpx solid rgba(186,166,139,1);
}
.form__single.pla {
  height: 120rpx;
  border-bottom: none;
  margin-bottom: 150rpx;
}
.form__submit {
  width: 100%;
  height: 120rpx;
  background:rgba(186,166,139,1);
  font-size:32rpx;
  font-family:PingFangSC-Medium;
  color:rgba(255,255,255,1);
  line-height:120rpx;
  position: fixed;
  z-index: 1000;
  left: 0;
  bottom: 0;
  text-align: center
}
.form__info__block {
  padding-bottom: 30rpx;
}