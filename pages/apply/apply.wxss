/* pages/apply/apply.wxss */
.top__header {
  width: 100%;
  height: 200rpx;
  position: relative;
}
.top__header image {
  width: 100%;
  height: 200rpx;
}
.form__cnt {
  width: 100%;
  padding: 0 22rpx;
  box-sizing: border-box;
}
.form__single__left {
  color: #333;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 40rpx;
  min-width: 200rpx;
  padding-left: 35rpx;
}
.form__single {
  display: flex;
  flex-direction: row;
  height: 108rpx;
  border-bottom: 1px solid rgba(234,234,234,1);
}
.inflution__cnt .form__single {
  height: 72rpx;
}
.inflution__cnt .form__single__left {
  padding-left: 20rpx;
}
.inflution__cnt .form__single__right input {
  height: 72rpx;
  padding-right: 44rpx;
}
.form__single__right {
  display: flex;
  flex: 1;
  position: relative;
}
.form__single__right input {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #333;
  height: 108rpx;
  text-align: right;
  width: 100%;
}
.inflution__cnt {
  margin-left: 90rpx;
  padding-left: 6rpx;
  margin-top: 18rpx;
  border-left: 1rpx solid rgba(234,234,234,1)
}
.form__single__picker {
  font-size: 24rpx;
  line-height: 72rpx;
  text-align: right;
  color: #333;
  display: flex;
  flex: 1;
  justify-content: flex-end;
  width: 100%;
  align-items: center;
}
.form__single__right picker {
  width: 100%;
}