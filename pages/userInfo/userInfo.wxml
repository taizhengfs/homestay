<!--pages/userInfo/userInfo.wxml-->
<view class='user—info'>
  <view class='user-info__content'>
    <view class='user-info__block'>
      <view class='user-info__block__left'>头像</view>
      <view class='user-info__block__right'><image src='http:{{userDetail.avatar}}'></image></view>
    </view>
    <view class='user-info__block'>
      <view class='user-info__block__left'>昵称</view>
      <view class='user-info__block__right'>{{!!userInfo.truename ? userInfo.truename : '暂无'}}</view>
    </view>
    <view class='user-info__block'>
      <view class='user-info__block__left'>性别</view>
      <view class='user-info__block__right'>{{userInfo.gender===1?'男':'女'}}</view>
    </view>
    <view class='user-info__block'>
      <view class='user-info__block__left'>地区</view>
      <view class='user-info__block__right'>{{userInfo.province}}-{{userInfo.city}}</view>
    </view>
    <view class='user-info__block'>
      <view class='user-info__block__left'>生日</view>
      <view class='user-info__block__right'>{{!!userInfo.birth_at ? userInfo.birth_at : '暂无'}}</view>
    </view>
    <view class='user-info__block'>
      <view class='user-info__block__left'>手机号</view>
      <view class='user-info__block__right'>{{!!userInfo.phone ? userInfo.phone : '暂无'}}</view>
    </view>
  </view>
  <view class='user__submit__form'>
    <button data-url='../userEdit/userEdit' bindtap='jumpToPage'>修改</button>
  </view>
</view>
