/* pages/userInfo/userInfo.wxss */
.user-info__content {
  padding: 25rpx;
  box-sizing: border-box;
}
.user-info__block {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 96rpx;
  border-bottom:2rpx solid rgba(234,234,234,1);
  justify-content: space-between;
}
.user-info__block:first-of-type {
  height: 160rpx;
}
.user-info__block__right image {
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 100rpx;
}
.user-info__block__left {
  font-size:28rpx;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.user-info__block__right {
  font-size:28rpx;
  color:rgba(186,166,139,1);
  line-height:40rpx;
}
.user__submit__form {
  width: 100%;
  height: 80rpx;
  margin-top: 66rpx;
}
.user__submit__form button {
  width: 480rpx;
  height: 80rpx;
  background: #BAA68B;
  border-radius: 8rpx;
  font-size:28rpx;
  color:rgba(255,255,255,1);
  line-height:80rpx;
}