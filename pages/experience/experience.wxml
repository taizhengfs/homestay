<!--pages/experience/experience.wxml-->
<view class="container">
  <view class="experience__swiper">
    <swiper indicator-dots="{{indicatorDots}}" indicator-color="#D8D8D8" indicator-active-color="#BAA68B" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" current="{{curentImg}}">
      <block wx:for="{{swiperimage}}" wx:key>
        <swiper-item class="top-img" data-type="{{item.type}}" bindtap="jumpToDetail">
          <view class="header-mask"></view>
          <image src="{{item.thumb}}" class="slide-image"> </image>
        </swiper-item>
      </block> 
    </swiper>
  </view>
  <view class="experience__lists">
    <view class="experience__list" wx:for="{{experenceList}}" wx:key="{{index}}">
      <view class="experience__list__l">
        <image src="{{item.cover}}"></image>
      </view>
      <view class="experience__list__r">
        <view class="experience__list__title {{item.type===2?'is_over':''}}" >
            {{item.title}}
            <view class="experience__list__type">试睡</view>
        </view>
        <view class="experience__list__date">
            体验时间：{{item.start_time}}
        </view>
        <view class="experience__list__btn {{item.type===2?'is_over':''}}">
          立即参与
        </view>
      </view>
    </view>
  </view>
</view>
