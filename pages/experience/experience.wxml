<!--pages/experience/experience.wxml-->
<view class="container">
  <swiperItem class="w__100"
    isShowDots="{{true}}"
    swiperimage="{{swiperimage}}"
  ></swiperItem>
  <view class="experience__lists">
    <view class="experience__list" wx:for="{{experenceList}}" wx:key="{{index}}">
      <view class="experience__list__l">
        <image src="{{item.cover}}"></image>
      </view>
      <view class="experience__list__r">
        <view class="experience__list__title {{item.type===2?'is_over':''}}" >
            {{item.title}}
            <view class="experience__list__type">试睡</view>
        </view>
        <view class="experience__list__date">
            体验时间：{{item.start_time}}
        </view>
        <view bindtap='jumpToBe' data-type="{{item.type}}" class="experience__list__btn {{item.type===2?'is_over':''}}">
          立即参与
        </view>
      </view>
    </view>
  </view>
</view>
