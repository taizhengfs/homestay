/* pages/roomDetail/roomDetail.wxss */
.detail__desc {
  width: 100%;
}
.detail__desc__title {
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  text-align: left;
  padding: 30rpx 20rpx 22rpx 20rpx;
  border-bottom:2rpx solid rgba(234,234,234,1);
}
.detail__desc__single {
  font-size:24rpx;
  font-family:PingFangSC-Light;
  line-height:44rpx;
  width: 50%;
  margin-bottom: 10rpx;
}
.w__100 {
  width: 100%;
}
.detail__desc__main {
  width: 100%;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom:2rpx solid rgba(234,234,234,1);
}
.detail__room__type__title {
  padding: 26rpx 32rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 44rpx;
  font-weight: 500;
}
.detail__room__type__main {
  padding: 0 32rpx;
  width: 100%;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFangSC-Light;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.room__type {
  padding-left: 35rpx;
  position: relative;
  margin-bottom: 22rpx;
}
.room__type:before {
  content: '*';
  color: #C12121;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 28rpx;
  line-height: 40rpx;
}
.detail__room__type {
  margin-bottom: 100rpx;
  width: 100%;
}
.detail__bottom {
  width: 100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  z-index: 33;
  flex-direction: row;
  justify-content: space-between;
}
.single__red {
  font-size: 36rpx;
  line-height: 90rpx;
  color: #C12121;
  display: inline;
}
.detail__bottom__l {
  font-size: 24rpx;
  line-height: 90rpx;
  color: #868686;
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 32rpx;
  background: #FAFAFA;
  border-top: 2rpx solid #D9D9D9;
}
.detail__bottom__r {
  width: 300rpx;
  height: 90rpx;
  background: #C12121;
  color: #fff;
  font-size: 28rpx;
  line-height: 90rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.icon__call {
  width: 26rpx;
  height: 26rpx;
  position: relative;
  margin-right: 20rpx;
}
.icon__call image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}