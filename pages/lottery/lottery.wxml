<!--pages/lottery/lottery.wxml-->
<view class='container last {{isShowCard||isShowBox?"blur__mask":""}}' style="overflow-x: hidden">
  <swiperItem class="w__100" isShowShare="{{true}}" isAutoScroll="{{false}}" swiperimage="{{swiperimage}}"></swiperItem>
  <view class='lottery__title'>
    <view class='lottery__title__top'>
      <view class='lottery__title__top__l'>
        ¥0
        <view class='delete__line'>¥{{ticket.price}}</view>
      </view>
      <view class='lottery__title__top__r'>总共<view class='disp__inline'>{{detail.ticket_no}}</view>张</view>
    </view>
    <view class='lottery__title__bottom'>{{detail.name}}</view>
  </view>
  <view class='lottery__detail__block'>
    <view class='lottery__detail__title'>活动流程</view>
    <view class='lottery__detail__content'>
      <view class='lottery__single' wx:for="{{activity}}">
        <view class="lottery__ticket__block">
          <view class="lottery__ticket__top">
            <image src="http:{{item.icon}}"></image>
          </view>
          <view class="lottery__ticket__bottom">
            {{item.title}}
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='lottery__detail__block'>
    <view class='lottery__detail__title'>
      <view class='lottery__detail__title__l'>抽奖规则</view>
      <view class='lottery__detail__title__r' data-id="{{detail.id}}" bindtap='jumpToRuleDetail'>
        规则详情
        <view class='icon__arrow__right'></view>
      </view>
    </view>
    <view class='lottery__rules__content'>
      <view class='lottery__rules__single'>活动时间：
        <view class='disp__inline'>{{detail.starttime}}-{{detail.endtime}}</view>
      </view>
      <view class='lottery__rules__single'>开奖时间：
        <view class='disp__inline'>{{detail.lottery_at}}</view>
      </view>
      <view class='lottery__rules__single'>活动参与方式：
        <text class='disp__inline'>{{detail.part_desc}}</text>
      </view>
    </view>
  </view>
  <view class='lottery__detail__block' wx:if="{{members.length>0}}">
    <view class='lottery__detail__title'>成团好友
    </view>
    <view class='lottery__friends__content'>
      <view class='lottery__friends__single' wx:for="{{isShowAll?members:lessList}}">
        <view class='lottery__friends__s_top'>
          <image src='{{item.avatar}}'></image>
        </view>
        <view class='lottery__friends__s_bottom'>
          {{item.nickname}}
        </view>
      </view>
    </view>
    <view class='detail__arrow' bindtap="showAll" wx:if="{{!isShowAll&&members.length>10}}">
      <view class='disp__inline'>查看全部</view>
      <image src='http://file.yinxinlife.com/images/icon_more.png'></image>
    </view>
  </view>
  <view class='lottery__detail__block'>
    <view class='lottery__detail__title'>奖品详情
    </view>
    <!-- <view class='lottery__record__content' data-id="{{ticket.id}}" bindtap='jumpToPrizeDetail'> -->
    <view class='lottery__record__content' data-id="{{ticket.id}}">
      <view class='lottery__record__img'>
        <view class='lottery__tag__red'>价值<view class='lottery_price'>¥{{ticket.price}}</view></view>
        <image wx:if="{{ticket.image}}" mode="widthFix" src="http:{{ticket.image}}"></image>
      </view>
      <view class='lottery__desc'>
        <view class='lottery__desc__top'>{{ticket.name}}</view>
        <view class='lottery__desc__bottom'>{{ticket.theme}}</view>
      </view>
    </view>
  </view>
  <view class='exp__detail__block'>
    <view class='exp__detail__title'>兑奖商家</view>
    <view class='exp__detail__sub'>
      {{homestay.name}} 
    </view>
    <view class='exp__detail__cnt'>
      <view class='exp__detail__cnt__l'>
        <image wx:if="{{homestay.image}}" mode="widthFix" src='http:{{homestay.image}}'></image>
      </view>
      <view class='exp__detail__cnt__r'>
        <view class='exp__detail__cnt__r__t'>
          <view class='exp__detail__tag' wx:for="{{homestay.tags}}">{{item}}</view>
        </view>
        <view class='exp__detail__cnt__r__m' data-lat="{{homestay.location[1]}}" data-long="{{homestay.location[0]}}" bindtap="goToMap">
          <view class="icon__cnt">
            <image src="http://file.yinxinlife.com/images/icon_location.png"></image>
          </view>
          {{homestay.district}}{{homestay.address}}-距我{{homestay.distance}}公里
        </view>
        <view class='exp__detail__cnt__r__b'>
          <view class="disp_red">
            ¥{{homestay.price}}
          </view>
          起
        </view>
      </view>
    </view>
  </view>

  <view>
  <!-- <view class="dt_cnt"> -->
    <detailCard title="房源介绍" wx:if="{{!!homestay.description}}" isShowArrow="{{false}}" class="w__100">
        <view class='detail__card__desc detail__card_pad'>
        {{homestay.description}}
        </view>
      </detailCard>
      <detailCard wx:if="{{homestay.support_facility.length>0}}" title="配套设施" isShowArrow="{{false}}" class="w__100">
        <view class='detail__card__support detail__card_pad'>
          <view class="support__single {{item.special?'cls__gold':''}}" wx:for="{{homestay.support_facility}}">
            {{item}}  |
          </view>
        </view>
      </detailCard>
      <detailCard title="餐饮信息" wx:if="{{!!homestay.dine_style ||!!homestay.dine_price||!!homestay.dine_dishes}}" isShowArrow="{{false}}" class="w__100">
        <view class='detail__card__info detail__card_pad'>
          <view class='detail__info__block' wx:if="{{!!homestay.dine_style}}">
            菜系：<view class='disp__inline'>{{homestay.dine_style}}</view>
          </view>
          <view class='detail__info__block' wx:if="{{!!homestay.dine_price}}">
            人均消费：<view class='disp__inline'>{{homestay.dine_price}}元</view>
          </view>
          <view class='detail__info__block' wx:if="{{!!detail.dine_dishes}}">
            特色菜：<view class='disp__inline'>{{homestay.dine_dishes}} </view>
          </view>
        </view>
        <view class='detail__info__dishes' wx:if="{{homestay.dine_atlas.length>0}}">
          <view class='detail__disher__content'>
            <view class='detail__disher__block' bindtap="showImages" data-url="{{item}}"  wx:for="{{homestay.dine_atlas}}">
              <view class='detail__disher__block_t'>
                <image mode="widthFix" src='http:{{item}}'></image>
              </view>
              <!-- <view class='detail__disher__block_b'>
                {{item.title}}
              </view> -->
            </view>
          </view>
        </view>
      </detailCard>
      <detailCard title="其他介绍" wx:if="{{!!detail.special_project||!!detail.meeting_room||!!detail.activity_space}}" isShowArrow="{{false}}" class="w__100">
        <view class='detail__card__info detail__card_pad'>
          <view class='detail__info__block' wx:if="{{!!homestay.special_project}}">
            特色项目：<view class='disp__inline'>{{homestay.special_project}}</view>
          </view>
          <!-- <view class='detail__info__block' wx:if="{{!!homestay.create_at}}">
            入驻隐心时间：<view class='disp__inline'>{{homestay.create_at}}</view>
          </view> -->
          <view class='detail__info__block' wx:if="{{!!homestay.meeting_room}}">
            会议室：<view class='disp__inline'>{{homestay.meeting_room}}</view>
          </view>
          <view class='detail__info__block' wx:if="{{!!homestay.activity_space}}">
            活动空间：<view class='disp__inline'>{{homestay.activity_space}}</view>
          </view>
        </view>
      </detailCard>
  </view>
  <view class='lottery__detail__block'>
    <view class='lottery__detail__title'>
      <view class='lottery__detail__title__l'>优惠说明</view>
      <view class='lottery__detail__title__r' data-id="{{ticket.id}}" bindtap='jumpToRuleDetail'>
        规则详情
        <view class='icon__arrow__right'></view>
      </view>
    </view>
    <view class='lottery__rules__content'>
      <view class='lottery__rules__single'>使用时间:
        <view class='disp__inline'>{{ticket.u_starttime}}至{{ticket.u_endtime}}</view>
      </view>
      <view class='lottery__rules__single'>使用规则:
        <text class='disp__inline'>{{ticket.use_rule}}</text>
      </view>
    </view>
  </view>
  <view class='exp__detail__block last'>
    <view class='exp__detail__title'>优惠详情</view>
    <view class="lottery__rules__content">
      <rich-text nodes="{{ticket.content}}"></rich-text>
    </view>
  </view>
  <view class='bottom__bar'>
    <view class='bottom__ba__block home' bindtap="jumpToHome"><view class="icon__home"></view>首页</view>
    <button class='bottom__ba__block fake-btn share' open-type="share" wx:if="{{detail.time_status===1}}">分享好友（{{members.length}}/{{detail.people_no}}）</button>
    <view class='bottom__ba__block btn_grey' wx:if="{{detail.time_status===0}}">暂未开始</view>
    <view class='bottom__ba__block btn_grey' wx:if="{{detail.time_status===2}}">活动已结束</view>
  </view>
</view>
<view class='pane__success' wx:if="{{isShowCard}}">
    <view class='pane__icon__success'>
      <image src='http://file.yinxinlife.com/images/icon_success.svg'></image>
    </view>
    <view class='pane__title'>申请提交成功</view>
    <text class='pane__desc'>申请结果将在7日内,\n以推送通知的方式告知您。</text>
    <view class='pane__button' bindtap='goBackPage'>确定</view>
  </view>
  <view class='pane__mask' wx:if="{{isShowCard}}">
  </view>

<authBox isShowBox="{{isShowBox}}" isShowCancel="{{false}}" bindcloseAuth="closeBox"></authBox>